<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">
	
	<name>mod_jbcookies</name>
	<author>JoomBall! Project</author>
	<creationDate>August 2014</creationDate>
	<authorEmail>info@joomball.com</authorEmail>
	<authorUrl>http://www.joomball.com</authorUrl>
	<copyright>Copyright Â© 2014-2026 JoomBall! Project - All Rights Reserved</copyright>
	<license>GNU/GPL, http://www.gnu.org/licenses/gpl-3.0.html</license>
	<version>6.0.0</version>
	<description>MOD_JBCOOKIES_XML_DESCRIPTION</description>
	<namespace path="src">JB\Module\JBCookies</namespace>

	<media folder="media/mod_jbcookies" destination="mod_jbcookies">
		<folder>css</folder>
		<folder>js</folder>
	</media>
	
    <media folder="media/jbmedia" destination="jbmedia">
		<folder>language</folder>
	</media>
	    
	<files>
		<folder>language</folder>
		<folder module="mod_jbcookies">services</folder>
		<folder>src</folder>
		<folder>tmpl</folder>

		<filename>CHANGELOG.txt</filename>
		<filename>mod_jbcookies.xml</filename>
		<filename>script.php</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic" addfieldprefix="JB\Module\JBCookies\Site\Field">
			
				<field
					name="header_butttons"
					type="JBButtons"
					url_site_joomball="https://www.joomball.com"
					url_site_joomball_download="https://github.com/JoomBall/JBCookies/releases"
					url_site_joomball_demo="https://www.joomball.com/extensiones/jbcookies"
					url_site_joomla_extensions="https://extensions.joomla.org/extensions/extension/site-management/cookie-control/joomball-cookies/" />
				
				<field
					name="note_vote_msg"
					type="JBMessage"
					message="note"
					label="JBVOTE_TITLE" />
				
				<field
					name="version_msg"
					type="JBMessage"
					message="version"
					path="../modules/mod_jbcookies/"
					xml="mod_jbcookies.xml"
					extension_name="mod_jbcookies" />

			</fieldset>
			
			<fieldset name="parameters" label="COM_MODULES_FORM_TITLE_EDIT">
				<fieldset name="param_layout_options" label="MOD_JBCOOKIES_FIELDSET_COOKIE_LABEL">
					<field
						name="show_cookie_title"
						type="radio"
						default="1"
						layout="joomla.form.field.radio.switcher"
						label="MOD_JBCOOKIES_FIELD_SHOW_TITLE_LABEL"
						description="MOD_JBCOOKIES_FIELD_SHOW_TITLE_DESC"
						filter="integer" >
						
						<option value="0">JHIDE</option>
						<option value="1">JSHOW</option>
					</field>
					
					<field
						name="show_policy_cookies"
						type="radio"
						default="1"
						layout="joomla.form.field.radio.switcher"
						label="MOD_JBCOOKIES_GLOBAL_POLICY_COOKIES"
						description="MOD_JBCOOKIES_FIELD_SHOW_INFO_DESC"
						filter="integer" >
						
						<option value="0">JHIDE</option>
						<option value="1">JSHOW</option>
					</field>

					<field
						name="show_article_modal"
						type="radio"
						default="1"
						label="MOD_JBCOOKIES_FIELD_SHOW_ATICLE_MODAL_LABEL"
						description="MOD_JBCOOKIES_FIELD_SHOW_ATICLE_MODAL_DESC"
						layout="joomla.form.field.radio.switcher"
						filter="integer"
						showon="show_policy_cookies:1" >
						
						<option value="0">JNO</option>
						<option value="1">JYES</option>
					</field>
					
				</fieldset>

				<fieldset name="param_layout_icon" label="MOD_JBCOOKIES_FIELDSET_ICON_LABEL">	
					<field
						name="show_icon"
						type="radio"
						default="1"
						layout="joomla.form.field.radio.switcher"
						filter="integer"
						label="MOD_JBCOOKIES_FIELD_SHOW_ICON_LABEL"
						description="MOD_JBCOOKIES_FIELD_SHOW_ICON_DESC" >
						
						<option value="0">JHIDE</option>
						<option value="1">JSHOW</option>
					</field>
					
					<field
						name="icon_position"
						type="list"
						default="right"
						label="COM_MODULES_FIELD_POSITION_LABEL"
						showon="show_icon:1" >
						
						<option value="left">JGLOBAL_LEFT</option>
						<option value="right">JGLOBAL_RIGHT</option>
					</field>
				</fieldset>

				<fieldset name="param_options" label="JOPTIONS">
					<field
						name="subdomain_alias"
						type="radio"
						default="0"
						layout="joomla.form.field.radio.switcher"
						filter="integer"
						label="MOD_JBCOOKIES_FIELD_DOMAIN_ALIAS_LABEL"
						description="MOD_JBCOOKIES_FIELD_DOMAIN_ALIAS_DESC" >
						
						<option value="0">JNO</option>
						<option value="1">JYES</option>
					</field>
					
					<field
						name="duration_cookie_days"
						type="number"
						hint="365"
						label="MOD_JBCOOKIES_FIELD_DURATION_COOKIE_DAYS_LABEL"
						description="" />

				</fieldset>
				
			</fieldset>

			<fieldset name="cookies_inventory" label="Cookies">
				<fieldset name="cookie_preferences" label="MOD_JBCOOKIES_FIELDSET_PREFERENCES" class="form-vertical">
					<field
						name="inventory_scan"
						type="JBInventoryButton"
						label="MOD_JBCOOKIES_FIELD_INVENTORY_BUTTON_LABEL"
						description="MOD_JBCOOKIES_FIELD_INVENTORY_BUTTON_DESC"
						buttontext="MOD_JBCOOKIES_FIELD_INVENTORY_BUTTON_TEXT"
						showon="">
					</field>

					<field
						name="cookie_prefs"
						type="subform"
						label="MOD_JBCOOKIES_FIELD_COOKIE_GROUPS_LABEL"
						description="MOD_JBCOOKIES_FIELD_COOKIE_GROUPS_DESC"
						multiple="true">
						<form>
							<fields>
								<fieldset class="form-horizontal">
									<field
										name="category"
										type="list"
										label="MOD_JBCOOKIES_GLOBAL_GROUP">
										<option value="necessary">MOD_JBCOOKIES_OPTION_NECESSARY</option>
										<option value="analytics">MOD_JBCOOKIES_OPTION_ANALYTICS</option>
										<option value="marketing">MOD_JBCOOKIES_OPTION_MARKETING</option>
										<option value="unassigned">MOD_JBCOOKIES_OPTION_UNASSIGNED</option>
									</field>
									<field
										name="preferences"
										type="subform"
										label="MOD_JBCOOKIES_FIELD_COOKIES_GROUP_LABEL"
										multiple="true"
										layout="joomla.form.field.subform.repeatable-table">
										<form>
											<fields name="options" class="form-vertical">
												<field
													name="name"
													type="text"
													label="JFIELD_NAME_LABEL"
													description="MOD_JBCOOKIES_FIELD_COOKIE_GROUPS_SLUG_DESC"
													class="form-control-sm w-100" />

												<field
													name="description"
													type="text"
													label="JGLOBAL_DESCRIPTION"
													class="form-control-sm w-100" />

												<field
													name="provider"
													type="text"
													label="MOD_JBCOOKIES_GLOBAL_PROVIDER"
													class="form-control-sm w-100" />

												<field
													name="show"
													type="radio"
													label="JSHOW"
													layout="joomla.form.field.radio.switcher"
													filter="integer"
													default="1">
													<option value="0">JNO</option>
													<option value="1">JYES</option>
												</field>
											</fields>
										</form>
									</field>
								</fieldset>
							</fields>
						</form>
					</field>
					
				</fieldset>	
			</fieldset>

			<fieldset name="languages" label="MOD_JBCOOKIES_FIELDSET_LANGUAGES_LABEL">
				
				<field
					name="lang"
					type="JBLanguages"
					class="form-control" >
				</field>
                   
            </fieldset>
            
            <fieldset name="advanced">
				
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="form-select"
					validate="moduleLayout" />
				
				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					validate="CssIdentifier" />
					
				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					default="1"
					filter="integer"
					validate="options"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="number"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					default="900"
					filter="integer" />
					
			</fieldset>
			
		</fields>
	</config>
	
	<!-- Installation / uninstallation script file -->
	<scriptfile>script.php</scriptfile>
	
	<!-- Update servers -->
	<updateservers>
		<server type="extension" priority="1" element="mod_jbcookies" name="JBCookies">https://www.joomball.com/images/updates/mod_jbcookies.xml</server>
	</updateservers>
	
</extension>
